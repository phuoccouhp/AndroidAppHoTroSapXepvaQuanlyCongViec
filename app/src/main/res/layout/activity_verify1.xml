<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Verify_1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_arrow_back_24"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/lb_verify"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:text="Verify "
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_margin="50dp"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/smoochsans_extrabold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />

    <TextView
        android:id="@+id/lb_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Please enter the code we sent you"
        android:textSize="20sp"
        android:fontFamily="@font/smoochsans_medium"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/lb_verify"
        />

    <LinearLayout
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/lb_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    <EditText
        android:id="@+id/et_otp_1"
        style="@style/OtpEditTextStyle" />
    <EditText
        android:id="@+id/et_otp_2"
        style="@style/OtpEditTextStyle" />
    <EditText
        android:id="@+id/et_otp_3"
        style="@style/OtpEditTextStyle" />
    <EditText
        android:id="@+id/et_otp_4"
        style="@style/OtpEditTextStyle" />
    </LinearLayout>

    <TextView
        android:id="@+id/lb_receive"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Didn't Receive the Code ? "
        android:textSize="20sp"
        android:fontFamily="@font/smoochsans_medium"
        android:textColor="@color/navy_blue"
        android:textAlignment="center"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/otp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
/>
    <TextView
        android:id="@+id/resend"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="23sp"
        android:text="Resend Code"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/smoochsans_bold"
        app:layout_constraintTop_toBottomOf="@id/lb_receive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Next"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_margin="40dp"
        android:fontFamily="@font/smoochsans_semibold"
        android:background="@drawable/btn_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/btn_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/lb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 of 2"
        android:textStyle="bold"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/progress"
        app:layout_constraintEnd_toEndOf="parent"
        />















</androidx.constraintlayout.widget.ConstraintLayout>