<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FF"
    tools:context=".AddTaskActivity"
    android:padding="24dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_check_24"
        app:tint="@color/white"
        app:backgroundTint="@color/pastel_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Save Task" />

    <TextView
        android:id="@+id/tv_new_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Task"
        android:textSize="32sp"
        android:fontFamily="@font/smoochsans_bold"
        android:textColor="@color/oxford_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Finish next chapter"
        android:padding="16dp"
        android:background="@drawable/bg_dialog_rounded"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_new_task_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_categories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Categories"
        android:textSize="22sp"
        android:fontFamily="@font/smoochsans_bold"
        android:textColor="@color/oxford_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_task_name" />

    <Spinner
        android:id="@+id/spinner_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_dialog_rounded"
        android:backgroundTint="@color/white"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_categories_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_due_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Due Date"
        android:textSize="22sp"
        android:fontFamily="@font/smoochsans_bold"
        android:textColor="@color/oxford_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_categories" />

    <Button
        android:id="@+id/btn_set_due_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Set due date"
        android:drawableLeft="@drawable/outline_calendar_month_24"
        android:backgroundTint="@color/white"
        android:textColor="@color/oxford_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_due_date_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_set_time"
        style="?attr/materialButtonOutlinedStyle"
        app:cornerRadius="16dp"
        />

    <Button
        android:id="@+id/btn_set_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Set time"
        android:drawableLeft="@drawable/baseline_notifications_24"
        android:backgroundTint="@color/white"
        android:textColor="@color/oxford_blue"
        app:layout_constraintTop_toTopOf="@id/btn_set_due_date"
        app:layout_constraintStart_toEndOf="@id/btn_set_due_date"
        app:layout_constraintEnd_toEndOf="parent"
        style="?attr/materialButtonOutlinedStyle"
        app:cornerRadius="16dp"
        />

    <TextView
        android:id="@+id/tv_reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Reminder"
        android:textSize="22sp"
        android:fontFamily="@font/smoochsans_bold"
        android:textColor="@color/oxford_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_due_date" />

    <Button
        android:id="@+id/btn_set_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Set reminder"
        android:drawableLeft="@drawable/baseline_notifications_24"
        android:backgroundTint="@color/white"
        android:textColor="@color/oxford_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_reminder_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="?attr/materialButtonOutlinedStyle"
        app:cornerRadius="16dp"
        />

    <TextView
        android:id="@+id/tv_notes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Notes"
        android:textSize="22sp"
        android:fontFamily="@font/smoochsans_bold"
        android:textColor="@color/oxford_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_reminder" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:hint="Add notes......"
        android:gravity="top"
        android:padding="16dp"
        android:background="@drawable/bg_dialog_rounded"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_notes_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fab_save_task"/>

</androidx.constraintlayout.widget.ConstraintLayout>