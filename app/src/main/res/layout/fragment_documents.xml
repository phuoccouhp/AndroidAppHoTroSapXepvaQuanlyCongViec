<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FF"
    tools:context=".DocumentsFragment">

    <!-- Nút menu -->
    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_menu_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="24sp"
        android:textColor="@color/oxford_blue"
        android:fontFamily="@font/smoochsans_bold"
        app:layout_constraintTop_toTopOf="@id/btn_menu"
        app:layout_constraintBottom_toBottomOf="@id/btn_menu"
        app:layout_constraintStart_toEndOf="@id/btn_menu"
        app:layout_constraintEnd_toStartOf="@id/btn_profile" />

    <!-- Nút profile -->
    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_person_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_menu" />

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Thẻ chào -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#D6E4FF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage your\ntime here"
                        android:textSize="20sp"
                        android:textColor="@color/oxford_blue"
                        android:fontFamily="@font/smoochsans_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/home_activity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Categories -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="22sp"
                android:fontFamily="@font/smoochsans_bold"
                android:textColor="@color/oxford_blue"
                android:layout_marginTop="24dp"/>

            <!-- Dòng icon category -->
            <!-- Dòng icon category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <!-- Work -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">
                    <ImageButton
                        android:id="@+id/btn_work"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/baseline_work_24"
                        android:background="@drawable/bg_dialog_rounded"
                        android:backgroundTint="@color/white"
                        app:tint="#FF9800" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work"/>
                </LinearLayout>

                <!-- Personal -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">
                    <ImageButton
                        android:id="@+id/btn_personal"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/baseline_person_24"
                        android:background="@drawable/bg_dialog_rounded"
                        android:backgroundTint="@color/white"
                        app:tint="#2196F3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal"/>
                </LinearLayout>

                <!-- Health -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">
                    <ImageButton
                        android:id="@+id/btn_health"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/baseline_health_24"
                        android:background="@drawable/bg_dialog_rounded"
                        android:backgroundTint="@color/white"
                        app:tint="#E91E63"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health"/>
                </LinearLayout>

                <!-- Shopping -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">
                    <ImageButton
                        android:id="@+id/btn_shopping"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/baseline_shopping_cart_24"
                        android:background="@drawable/bg_dialog_rounded"
                        android:backgroundTint="@color/white"
                        app:tint="#4CAF50"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shopping"/>
                </LinearLayout>

                <!-- Habit -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">
                    <ImageButton
                        android:id="@+id/btn_habit"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/baseline_search_24"
                        android:background="@drawable/bg_dialog_rounded"
                        android:backgroundTint="@color/white"
                        app:tint="#673AB7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habit"/>
                </LinearLayout>

            </LinearLayout>


            <!-- Your Task for Today -->
            <TextView
                android:id="@+id/tv_task_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Task for Today"
                android:textSize="22sp"
                android:fontFamily="@font/smoochsans_bold"
                android:textColor="@color/oxford_blue"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTasksToday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_task" />
            </androidx.cardview.widget.CardView>

            <!-- Your Task for Future -->
            <TextView
                android:id="@+id/tv_task_future"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Task for Future"
                android:textSize="22sp"
                android:fontFamily="@font/smoochsans_bold"
                android:textColor="@color/oxford_blue"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTasksFuture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_task" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
