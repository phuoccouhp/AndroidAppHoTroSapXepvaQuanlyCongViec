<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ForgetPassword">

<TextView
    android:id="@+id/lb_forgot_pass"
    android:layout_width="400dp"
    android:layout_height="70dp"
    android:text="Forgot Password ? "
    android:textSize="50dp"
    android:textAlignment="center"
    android:layout_margin="50dp"
    android:textColor="@color/dark_blue"
    android:fontFamily="@font/smoochsans_extrabold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
  />


    <ImageView
        android:id="@+id/image_forgot"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/forgetpass"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/lb_forgot_pass"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />


    <TextView
        android:id="@+id/lb_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where would you like to receive a Verification Code ?"
        android:textAlignment="center"
        android:textSize="28dp"
        android:fontFamily="@font/smoochsans_bold"
        android:textColor="@color/navy_blue"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/image_forgot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/smsOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_option_selected"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lb_send">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/rounded_call_24" /> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="via SMS"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/etSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_optional_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smsOption">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/round_email_24" />
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="via Email"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_gravity="center"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Enter email address"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Next"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_margin="40dp"
        android:fontFamily="@font/smoochsans_semibold"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@id/emailOption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />










</androidx.constraintlayout.widget.ConstraintLayout>