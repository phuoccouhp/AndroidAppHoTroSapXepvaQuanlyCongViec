<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_arrow_back_24"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lb_newpass"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:text="Create a New Password"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/smoochsans_extrabold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />
    <TextView
        android:id="@+id/lb_old_password"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/smoochsans_bold"
        android:text="Old Password"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lb_newpass" />

    <ImageView
        android:id="@+id/image_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/outline_edit_square_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lb_old_password"
        app:layout_constraintTop_toTopOf="@+id/lb_old_password" />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/text_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/lb_old_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:padding="5dp"
            android:background="@drawable/edit_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/lb_new_pass"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/smoochsans_bold"
        android:text="New Password"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_password" />

    <ImageView
        android:id="@+id/image_new_pass"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/outline_edit_square_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lb_new_pass"
        app:layout_constraintTop_toTopOf="@+id/lb_new_pass" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_new_pass"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/lb_new_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_pass_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:padding="5dp"
            android:background="@drawable/edit_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/lb_confirm_pass"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/smoochsans_bold"
        android:text="Confirm New Password"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_new_pass" />

    <ImageView
        android:id="@+id/image_confirm_pass"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/outline_check_box_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lb_confirm_pass"
        app:layout_constraintTop_toTopOf="@+id/lb_confirm_pass" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_confirm_pass"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/lb_confirm_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_confirm_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:padding="5dp"
            android:background="@drawable/edit_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_margin="60dp"
        android:text="Vertify"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/smoochsans_semibold"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@+id/text_confirm_pass"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


