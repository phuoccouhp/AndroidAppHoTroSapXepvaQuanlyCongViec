<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Sign_up">
    <TextView
        android:id="@+id/lb_sign_up"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="SIGN UP"
        android:fontFamily="@font/bebasneue_regular"
        android:textSize="60dp"
        android:textColor="@color/pastel_deep_blue_violet"
        android:shadowColor="#80000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="80dp"
        />
    <TextView
        android:id="@+id/lb_welcome"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Welcome On Board"
        android:textSize="25dp"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/smoochsans_medium"
        android:textAlignment="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/lb_sign_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
/>


    <TextView
        android:id="@+id/lb_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Your name"
        android:fontFamily="@font/smoochsans_bold"
        android:textSize="25dp"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/lb_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/image_name"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/outline_familiar_face_and_zone_24"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/lb_name"
        app:layout_constraintTop_toTopOf="@+id/lb_name"
        app:layout_constraintBottom_toBottomOf="@+id/lb_name" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_name_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/lb_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="5dp"
           />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/lb_email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Email"
        android:fontFamily="@font/smoochsans_bold"
        android:textSize="25dp"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/lb_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/image_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_email_24"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/lb_email"
        app:layout_constraintTop_toTopOf="@+id/lb_email"
        app:layout_constraintBottom_toBottomOf="@+id/lb_email" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_email_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/lb_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="5dp"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>








    <TextView
        android:id="@+id/lb_password"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/smoochsans_bold"
        android:text="Password"
        android:textColor="@color/dark_blue"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_email_layout" />

    <ImageView
        android:id="@+id/image_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/outline_edit_square_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lb_password"
        app:layout_constraintTop_toTopOf="@+id/lb_password" />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/text_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/lb_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:background="@drawable/edit_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/lb_confirm_pass"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/smoochsans_bold"
        android:text="Confirm Password"
        android:textColor="@color/dark_blue"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_password" />

    <ImageView
    android:id="@+id/image_confirm_pass"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/outline_check_box_24"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/lb_confirm_pass"
    app:layout_constraintTop_toTopOf="@+id/lb_confirm_pass" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_confirm_pass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/lb_confirm_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirm_pass_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comfirm Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:background="@drawable/edit_text" />
    </com.google.android.material.textfield.TextInputLayout>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_sign_up"
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:text="Sign up"
    android:textSize="30dp"
    android:textColor="@color/white"
    android:layout_margin="40dp"
    android:fontFamily="@font/smoochsans_semibold"
    android:background="@drawable/btn_background"
    app:layout_constraintTop_toBottomOf="@id/text_confirm_pass"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    />

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/text_already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALREADY HAVE AN ACCOUNT? "
            android:textSize="19dp"
            android:fontFamily="@font/smoochsans_medium"/>

        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:textSize="19dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/smoochsans_bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_or"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="OR"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:fontFamily="@font/smoochsans_semibold"
        app:layout_constraintTop_toBottomOf="@id/layout_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/text_continue"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="CONTINUE WITH"
        android:textSize="19dp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:fontFamily="@font/smoochsans_medium"
        app:layout_constraintTop_toBottomOf="@id/text_or"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageButton
        android:id="@+id/image_gg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/gg"

        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/text_continue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
/>




</androidx.constraintlayout.widget.ConstraintLayout>