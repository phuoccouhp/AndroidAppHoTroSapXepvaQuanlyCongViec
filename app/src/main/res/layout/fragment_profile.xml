<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfileFragment">
    <TextView
        android:id="@+id/tvCalendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Profile"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#1E293B"
        android:textSize="22sp"
        android:fontFamily="@font/smoochsans_bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
    android:id="@+id/image_avatar"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_marginTop="70dp"
    android:padding="5dp"
    android:scaleType="centerCrop"
    android:src="@drawable/profile"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
    app:strokeColor="@color/dark_blue"
    app:strokeWidth="2dp"
    />

    <TextView
        android:id="@+id/lb_yourname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/smoochsans_bold"
        android:text="Your name"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_avatar"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/smoochsans_medium"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@id/lb_yourname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lb_yourname"
        tools:text="Nguyen Van A"
        />

    <TextView
        android:id="@+id/lb_youremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/smoochsans_bold"
        android:text="Email"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/lb_yourname"
        app:layout_constraintTop_toBottomOf="@id/lb_yourname"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/smoochsans_medium"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@id/lb_youremail"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/lb_youremail"
        tools:text="nguyenvana@email.com"
        />

    <TextView
        android:id="@+id/lb_yourpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/smoochsans_bold"
        android:text="Password"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/lb_youremail"
        app:layout_constraintTop_toBottomOf="@id/lb_youremail"
        />

    <TextView
        android:id="@+id/tv_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/smoochsans_medium"
        android:text="Change Password"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBaseline_toBaselineOf="@id/lb_yourpass"
        app:layout_constraintEnd_toEndOf="@id/tv_email"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/smoochsans_semibold"
        android:text="Log out"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lb_yourpass"
        />

</androidx.constraintlayout.widget.ConstraintLayout>